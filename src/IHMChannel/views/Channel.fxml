<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="IHMChannel.controllers.ChannelController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox fx:id="channelPage">
        <HBox fx:id="menuBar">
            <Button fx:id="back" text="back"/>
            <VBox>
                <HBox>
                    <Label fx:id="channelName">
                        <contextMenu>
                            <ContextMenu fx:id="channelContextMenu">
                                <items>
                                    <MenuItem text="Modifier les infos du channel" onAction="#modifyChannel"/>
                                    <MenuItem text="Voir la liste des utilisateurs" onAction="#seeMembers"/>
                                    <MenuItem text="Changer les droits" onAction="#changeRights"/>
                                    <MenuItem text="Kicker un utilisateur" onAction="#kickMember"/>
                                    <MenuItem text="Liste des utilisateurs kickÃ©s" onAction="#seeKickedMembers"/>
                                    <MenuItem text="Supprimer channel" onAction="#deleteChannel"/>
                                </items>
                            </ContextMenu>
                        </contextMenu>
                    </Label>
                    <Button fx:id="contextMenuBtn" text="v" onAction="#openChannelContextMenu"/>
                </HBox>

                <Text fx:id="channelDescription"/>
            </VBox>
            <Button fx:id="seeMembersBtn" onAction="#seeMembers"/>
            <Button fx:id="addMemberBtn" onAction="#addUserToChannel"/>
            <Button fx:id="leaveChannelBtn" onAction="#leaveChannel"/>
        </HBox>
        <BorderPane fx:id="pageToDisplay"/>
    </VBox>

</AnchorPane>
