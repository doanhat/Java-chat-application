<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="IHMChannel.controllers.ChannelMessagesController">
    <GridPane>
        <columnConstraints>
            <ColumnConstraints percentWidth="95.0" />
            <ColumnConstraints percentWidth="5.00"/>
        </columnConstraints>
        <children>
            <VBox prefWidth="1400">
                <HBox prefWidth="1400">
                    <ListView fx:id="listMessages" prefWidth="1200"/>
                    <BorderPane fx:id="connectedMembers" styleClass="connectedMembersList" prefWidth="200"></BorderPane>
                </HBox>

                <HBox prefHeight="-Infinity" styleClass="envoi-message" alignment="BOTTOM_LEFT">
                    <Pane HBox.hgrow="ALWAYS" />
                    <ImageView fx:id="profilePic"/>
                    <TextArea fx:id="typedText" prefWidth="1200"/>
                    <Button fx:id="sendBtn" onAction="#sendMessage" styleClass="icon-bar-btn"/>
                    <Button fx:id="testReception" text="test reception" onAction="#receiveMessage"/>
                </HBox>

            </VBox>

        </children>



    </GridPane>


    <stylesheets>
        <URL value="file:src/common/IHMCommon/common.css"></URL>
    </stylesheets>
</AnchorPane>
