<AnchorPane xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="IHMChannel.controllers.ChannelPageController">
    <VBox fx:id="channelPage">

        <HBox>
            <children>
                <TextField fx:id="canalText" />
                <Button fx:id="createCanalBtn" mnemonicParsing="false" onAction="#createChannel" text="Join" />
            </children>
        </HBox>
        <HBox style="-fx-background-color: #B9E6FF">
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="back" styleClass="icon-btn" />
        </HBox>

        <TabPane fx:id="tabs" prefWidth="1400"/>
        <BorderPane fx:id="pageToDisplay" prefWidth="1400"/>
        <!--
        MOVED TO ChannelMessages.fxml
