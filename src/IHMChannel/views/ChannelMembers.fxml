<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="IHMChannel.controllers.ChannelMembersController">
    <VBox>
        <HBox fx:id="channelMember">
            <fx:define>
                <ToggleGroup fx:id="viewMode" />
            </fx:define>
            <RadioButton fx:id="alphaBtn" text="alphabétique" toggleGroup="$viewMode" onAction="#alphabeticSort" styleClass="btn-radio"/>
            <RadioButton fx:id="adminBtn" text="autorisations" toggleGroup="$viewMode" onAction="#adminSort"/>
            <RadioButton fx:id="onlineBtn" text="utilisateurs connectés" toggleGroup="$viewMode" onAction="#onlineUserSort"/>
        </HBox>
        <!--CONFLICT ??? ListView ou BorderPane ? --> 
        <ListView fx:id="membersList" style="-fx-background-color: #ffffff;" styleClass="list-cell"/>
        <BorderPane fx:id="listMembersDisplay"/>
    </VBox>
    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>

</AnchorPane>
